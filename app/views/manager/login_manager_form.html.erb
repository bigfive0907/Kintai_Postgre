<div class="main users-new">
  <div class="container">
    <div class="form-heading">管理者としてログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="error">
            <h2><%= @error_message %></h2>
          </div>
        <% end %>

        <%= form_tag("/login_manager") do %>
        
          <p>メールアドレス</p>
          <input name="email" value="<%= @email %>">
          <p>パスワード</p>
          <input type="password" name="password" value="<%= @password %>">
          
          <input type="submit" value="ログイン">
        <% end %>
      </div>
    </div>
  </div>
</div>